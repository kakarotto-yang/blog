<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kakarotto.mapper.UserMapper">
    <select id="getUserById" resultType="User">
        select * from user where id = #{id}
    </select>
    <insert id="addUser">
        insert into user(nick_name,email,webstation,head_img) values(#{arg0},#{arg1},#{arg2},#{arg3})
    </insert>
    <select id="getUser" resultType="User">
        select * from user where nick_name = #{arg0}
    </select>

    <select id="getSuperAdUser" resultType="User">
        select * from user where is_admin='1' and is_super = '1'
    </select>
    <select id="getAdUserById" resultType="User">
        select * from user where is_admin='1' and id = #{id}
    </select>
    <select id="getAdUserByNickName" resultType="User">
        select * from user where is_admin='1' and nick_name = #{arg0}
    </select>
    <insert id="addAdUser">
        insert into user(nick_name,email,webstation,head_img,is_admin) values(#{arg0},#{arg1},#{arg2},#{arg3},'1')
    </insert>


    <select id="login" resultType="User">
        select * from user where is_admin='1' and nick_name = #{arg0} and password = #{arg1}
    </select>


</mapper>

